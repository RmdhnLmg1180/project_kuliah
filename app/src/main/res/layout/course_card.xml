<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical">
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:backgroundTint="@color/blue"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        app:cardCornerRadius="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Application Development"
        android:fontFamily="@font/thicccboi_bold"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginRight="125dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="22dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50 Participant"
            android:textColor="@color/white"
            android:fontFamily="@font/thicccboi_regular"
            android:layout_marginTop="78dp"
            android:layout_marginLeft="33dp" />

        <View
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:foreground="@drawable/profil"
            android:layout_marginTop="79dp"
            android:layout_marginLeft="14dp"/>

        <View
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:foreground="@drawable/play"
            android:layout_marginTop="113dp"
            android:layout_marginLeft="14dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 Lessons"
            android:textColor="@color/white"
            android:fontFamily="@font/thicccboi_regular"
            android:layout_marginTop="113dp"
            android:layout_marginLeft="33dp" />
        
        <View
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:foreground="@drawable/mobile"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="260dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5h 50min"
            android:textColor="@color/white"
            android:fontFamily="@font/thicccboi_regular"
            android:layout_marginTop="113dp"
            android:layout_marginLeft="275dp"/>

        <View
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:foreground="@drawable/clock"
            android:layout_marginTop="113dp"
            android:layout_marginLeft="255dp"/>




    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video"
        android:fontFamily="@font/thicccboi_bold"
        android:textSize="18dp"
        android:layout_marginTop="214dp"
        android:layout_marginLeft="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View All"
        android:fontFamily="@font/thicccboi_bold"
        android:textSize="15dp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="330dp"
        android:textColor="#8A8A8A"/>




</RelativeLayout>