<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_width="165dp"
        android:layout_height="190dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="25dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/blue">

        <androidx.cardview.widget.CardView
            android:layout_width="55dp"
            android:layout_height="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/thicccboi_semibold"
                android:textSize="10dp"
                android:textColor="@color/blue"
                android:text="Beginner"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/thicccboi_semibold"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:text="Fundamental HTML"/>

        <androidx.cardview.widget.CardView
            android:layout_width="135dp"
            android:layout_height="70dp"
            app:cardCornerRadius="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:backgroundTint="@color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:background="@drawable/html"/>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/videos"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="95dp"
            android:alpha=".6"
            android:scaleType="fitXY"
            android:layout_gravity="bottom"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="right"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="100dp"
            android:fontFamily="@font/thicccboi_medium"
            android:textSize="8dp"
            android:textColor="@color/white"
            android:alpha=".6"
            android:text="10 Lessons"/>


    </androidx.cardview.widget.CardView>

</RelativeLayout>