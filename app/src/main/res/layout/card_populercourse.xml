<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_populer_course"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="165dp"
        android:layout_height="190dp"
        android:layout_gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/blue"
        app:cardCornerRadius="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="55dp"
            android:layout_height="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/thicccboi_semibold"
                android:text="Beginner"
                android:textColor="@color/blue"
                android:textSize="10dp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/thicccboi_semibold"
            android:text="Fundamental HTML"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="135dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/html"
                android:scaleType="fitXY" />

        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="95dp"
            android:layout_marginBottom="15dp"
            android:alpha=".6"
            android:background="@drawable/videos"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:alpha=".6"
            android:fontFamily="@font/thicccboi_medium"
            android:gravity="right"
            android:text="10 Lessons"
            android:textColor="@color/white"
            android:textSize="8dp" />


    </androidx.cardview.widget.CardView>

</RelativeLayout>